
@inherits NancyRazorViewBase<IEnumerable<Blog>>

@{
    Layout = "Shared/_Layout.cshtml";
    ViewBag.Title = "Blogs";
}

<div>
       
    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Created On</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (!Model.Any())
            {
                <tr><td colspan="3">No Blogs Available</td></tr>
            }
                
            @foreach (var blog in Model)
            {
                <tr>
                    <td>@blog.Id</td>
                    <td>@blog.Name</td>
                    <td>@blog.CreatedOn</td>
                    <td>None</td>
                </tr>
            }
        </tbody>
    </table>

</div>